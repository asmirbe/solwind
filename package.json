{
	"name": "completions-sample",
	"displayName": "Completion Item Provider Sample",
	"version": "0.0.2",
	"publisher": "vscode-samples",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"engines": {
		"vscode": "^1.73.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:html"
	],
	"contributes": {
		"commands": [
			{
				"command": "extension.generateFromTemplate",
				"title": "Generate from Template"
			},
			{
				"command": "extension.refreshSnippets",
				"title": "Refresh Snippets",
				"icon": "$(refresh)"
			},
			{
				"command": "extension.addSnippet",
				"title": "Add Snippet",
				"icon": "$(add)"
			},
			{
				"command": "extension.editSnippet",
				"icon": "$(pencil)",
				"title": "Edit Snippet"
			},
			{
				"command": "extension.deleteSnippet",
				"icon": "$(trash)",
				"title": "Delete Snippet"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "extension.generateFromTemplate",
					"group": "YourExtensionGroup@1"
				}
			],
			"view/title": [
				{
					"command": "extension.refreshSnippets",
					"group": "navigation",
					"when": "view == snippets"
				},
				{
					"command": "extension.addSnippet",
					"group": "navigation",
					"when": "view == snippets"
				}
			],
			"view/item/context": [
				{
					"command": "extension.editSnippet",
					"group": "inline",
					"when": "view == snippets && viewItem == snippet"
				},
				{
					"command": "extension.deleteSnippet",
					"group": "inline",
					"when": "view == snippets && viewItem == snippet"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "snippets",
					"title": "Snippets",
					"icon": "$(heart)"
				}
			]
		},
		"views": {
			"snippets": [
				{
					"id": "snippets",
					"name": "Snippets",
					"type": "tree"
				}
			]
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./",
		"convert": "node ./convert.js"
	},
	"devDependencies": {
		"@types/node": "^18",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.26.0",
		"typescript": "^5.4.2"
	},
	"dependencies": {
		"appwrite": "^15.0.0",
		"node-html-parser": "^6.1.13",
		"pocketbase": "^0.21.3"
	}
}