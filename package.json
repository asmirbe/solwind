{
	"name": "completions-sample",
	"displayName": "Solwind tailwind component completions & snippets manager",
	"version": "0.0.2",
	"publisher": "Asmir Belkic for Solware",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"engines": {
		"vscode": "^1.73.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:html",
		"onWebviewPanel:snippetDetailView"
	],
	"contributes": {
		"commands": [
			{
				"command": "solwind.refreshSnippets",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "solwind.generateFromTemplate",
				"title": "Generate from Template"
			},
			{
				"command": "solwind.editSnippet",
				"icon": "$(pencil)",
				"title": "Edit"
			},
			{
				"command": "solwind.deleteSnippet",
				"icon": "$(trash)",
				"title": "Delete"
			},
			{
				"command": "solwind.renameCategory",
				"icon": "$(pencil)",
				"title": "Rename"
			},
			{
				"command": "solwind.addSubcategory",
				"title": "Add Subcategory",
				"icon": "$(add)"
			},
			{
				"command": "solwind.renameSubcategory",
				"icon": "$(pencil)",
				"title": "Rename"
			},
			{
				"command": "solwind.deleteSubcategory",
				"icon": "$(trash)",
				"title": "Delete"
			},
			{
				"command": "solwind.addSnippetFromSelection",
				"title": "Create Snippet from Selection"
			}
		],
		"viewsWelcome": [
			{
				"view": "solwind.snippets",
				"contents": "Loading..."
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "snippets-container",
					"title": "Solwind Snippets",
					"icon": "./resources/logo.svg"
				}
			]
		},
		"views": {
			"snippets-container": [
				{
					"id": "solwind.snippets",
					"name": "Snippets manager"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "solwind.refreshSnippets",
					"when": "view == solwind.snippets",
					"group": "navigation"
				}
			],
			"editor/context": [
				{
					"command": "solwind.addSnippetFromSelection",
					"when": "editorTextFocus && editorHasSelection"
				}
			],
			"view/item/context": [
				{
					"command": "solwind.renameCategory",
					"when": "view == solwind.snippets && viewItem == category",
					"group": "inline"
				},
				{
					"command": "solwind.renameSubcategory",
					"when": "view == solwind.snippets && viewItem == subcategory",
					"group": "inline"
				},
				{
					"command": "solwind.deleteSubcategory",
					"when": "view == solwind.snippets && viewItem == subcategory",
					"group": "inline"
				},
				{
					"command": "solwind.addSubcategory",
					"when": "view == solwind.snippets && viewItem == category",
					"group": "inline"
				},
				{
					"command": "solwind.deleteSnippet",
					"when": "view == solwind.snippets && viewItem == snippet",
					"group": "inline"
				}
			]
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "node ./esbuild.js",
		"package": "NODE_ENV=production node ./esbuild.js",
		"watch": "node ./esbuild.js --watch",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^8.0.0",
		"@types/node": "^18",
		"@types/vscode": "^1.73.0",
		"@types/vscode-webview": "^1.57.5",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"@vscode/webview-ui-toolkit": "^1.4.0",
		"eslint": "^8.26.0",
		"glob": "^8.0.3",
		"prettier": "^2.8.1",
		"typescript": "^5.4.2"
	},
	"dependencies": {
		"autoprefixer": "^10.4.19",
		"codemirror": "^6.0.1",
		"esbuild": "^0.21.5",
		"esbuild-plugin-copy": "^2.1.1",
		"esbuild-sass-plugin": "^3.3.1",
		"node-html-parser": "^6.1.13",
		"pocketbase": "^0.21.3",
		"postcss": "^8.4.38",
		"prism-code-editor": "^3.3.2"
	}
}
