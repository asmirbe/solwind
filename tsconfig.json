{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2020",
		"lib": [
			"ES2020",
			"DOM"
		],
		"sourceMap": true,
		"strict": true,
		"rootDir": "src",
		"outDir": "out",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"build",
		"dist",
		"src/**/*.js",
		"src/**/*.jsx",
		"database",
		"src/webview/"
	]
}